<Window x:Class="Neith.Signpost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Neith Signpost" Height="350" Width="525"
        WindowState="Minimized" WindowStyle="SingleBorderWindow" Loaded="Window_Loaded" IsVisibleChanged="Window_IsVisibleChanged" Visibility="Hidden">
    <Grid>
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        IconSource="/Icons/Error.ico"
                        ToolTipText="Neith Signpost">

            <!-- Set a simple context menu  -->
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="MenuItem1" Header="First Menu Item" Click="MenuItem1_Click" />
                    <MenuItem x:Name="MenuItem2" Header="ログ画面" Click="MenuItem2_Click" />
                    <MenuItem x:Name="MenuItem3" Header="コンバート" Click="MenuItem3_Click" />
                    <Separator />
                    <MenuItem x:Name="MenuItemExit" Header="終了" Click="MenuItemExit_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>

        </tb:TaskbarIcon>

    </Grid>
</Window>
