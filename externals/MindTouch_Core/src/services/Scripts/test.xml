            body {background-color: yellow}
            h1 {background-color: #00ff00}
            h2 {background-color: transparent}
            p {background-color: rgb(250,0,255)}
          </style>
        </head>
      </html>
    </return>
  </function>

  <function>
    <name>head_meta</name>
    <return type="xml">
      <html xmlns:eval="http://mindtouch.com/2007/dekiscript">
