<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:Neith.Signpost"
    x:Class="Neith.Signpost.LogItemView"
    d:DesignWidth="234" d:DesignHeight="60">
    <UserControl.Resources>
        <local:LogItemViewModel x:Key="LogItemViewModelDataSource" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource LogItemViewModelDataSource}}">
        <local:LogInfoView/>
        <FlowDocumentScrollViewer Margin="0" VerticalScrollBarVisibility="Disabled">
            <FlowDocument>
                <Paragraph>
                    <Floater>
                        <BlockUIContainer>
                         </BlockUIContainer>
                    </Floater>
                </Paragraph>
                <Paragraph><Run Text="{Binding Message, Mode=OneWay}"/></Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</UserControl>
